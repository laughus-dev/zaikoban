# npm configuration for Zaikoban project

# Use npm's cache more aggressively
prefer-offline=true

# Increase network timeout for slow connections
fetch-timeout=60000

# Retry settings
fetch-retries=3
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Ensure scripts can run
scripts-prepend-node-path=true

# Windows-specific: handle long paths
legacy-peer-deps=false

# Use lockfile for consistent installs
package-lock=true

# Don't auto-update packages
save-exact=false

# Logging level for debugging
# loglevel=verbose